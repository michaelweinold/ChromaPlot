\ProvidesPackage{header_chromaplot_glossary}

\usepackage{glossaries}

\makeglossaries

\newglossaryentry{luminaire}
{
    name=luminaire,
    description={A complete lighting unit consisting of a lamp or lamps together with the parts designed to distribute the light, to position and protect the lamps and ballast (where applicable), and to connect the lamps to the power supply \cite{nec} }
}
\newglossaryentry{ballast}
{
    name=ballast,
    description={A device connected between the supply and one or more discharge lamps which serves mainly to limit the current of the lamp(s) to the required value \cite{iev} }
}
\newglossaryentry{flicker}
{
    name=flicker,
    description={The impression of unsteadiness of visual sensation induced by a light stimulus whose luminance or spectral distribution fluctuates with time \cite{iev} }
}

